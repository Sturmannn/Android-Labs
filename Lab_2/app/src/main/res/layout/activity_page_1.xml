<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:padding="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:id="@+id/redSquareView"
        android:layout_width="@dimen/square_size"
        android:layout_height="@dimen/square_size"
        android:background="#A52A2A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <View
        android:id="@+id/greenSquareView"
        android:layout_width="@dimen/square_size"
        android:layout_height="@dimen/square_size"
        android:layout_marginTop="@dimen/half_square_size"
        android:layout_toEndOf="@id/redSquareView"
        android:background="#008000"
        app:layout_constraintStart_toEndOf="@+id/redSquareView"
        app:layout_constraintTop_toTopOf="@+id/redSquareView" />
    <FrameLayout
        android:id="@+id/blueSquareView"
        android:layout_width="@dimen/square_size"
        android:layout_height="@dimen/square_size"
        android:layout_toEndOf="@id/redSquareView"
        android:layout_marginStart="@dimen/half_square_size"
        android:background="#000080"
        app:layout_constraintStart_toEndOf="@+id/redSquareView"
        app:layout_constraintTop_toTopOf="@+id/redSquareView" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SquareTextField"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center">
        </TextView>

    </FrameLayout>

    <Button
        android:id="@+id/menuButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/menuButton"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>