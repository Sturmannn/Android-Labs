<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Контейнер для кнопки и названия устройства -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discoverDevicesContainer"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp">

        <!-- Кнопка поиска устройств -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/discoverDevicesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover Devices"
            android:textColor="#FFFFFF"
            app:cornerRadius="50dp"
            app:iconGravity="start"
            android:backgroundTint="#BB86FC" />
    </LinearLayout>

    <!-- Контейнер для названий устройств -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deviceNamesContainer"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/discoverDevicesContainer"
        android:layout_marginBottom="16dp">

        <!-- Название телефона -->
        <TextView
            android:id="@+id/phoneNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:text="Phone Name"
            android:gravity="start" />

        <!-- Название подключенного устройства -->
        <TextView
            android:id="@+id/connectedDeviceNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:text="Connected Device Name"
            android:gravity="end" />
    </LinearLayout>

    <!-- Список сообщений -->
    <androidx.cardview.widget.CardView
        android:id="@+id/messagesCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/deviceNamesContainer"
        android:layout_above="@+id/inputContainer"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#1F1F1F">

        <ListView
            android:id="@+id/messagesListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:padding="8dp" />
    </androidx.cardview.widget.CardView>

    <!-- Поле для ввода сообщения и кнопка отправки -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="#1F1F1F"
        android:layout_marginTop="8dp">

        <!-- Поле ввода сообщения -->
        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your message..."
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:inputType="text"
            android:backgroundTint="#03DAC5"
            android:fontFamily="sans-serif" />

        <!-- Кнопка отправки -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="➤"
            android:backgroundTint="#03DAC5"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            app:cornerRadius="50dp"
            app:iconPadding="16dp" />
    </LinearLayout>
</RelativeLayout>
